<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RacaoCachorroActivity"
    android:background="#3bd16d">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rações "
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0a0000"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView5"
        android:background="@drawable/shopping"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ração Premier Golden Special Cães Adultos Frango e Carne"
        android:id="@+id/textView17"
        android:textColor="#0a0101"
        android:layout_below="@+id/textView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ração Premium especial para cães de porte médio em idade adulta; - Músculos fortes: 22% de proteína de alta qualidade; - Maior rendimento por kg: alimento concentrado e rico em nutrientes; - Naturalmente saudável: sem corantes e aromatizantes artificiais; - Sabor irresistível rico em proteínas de alta qualidade; - Enriquecido com vitaminas e minerais essenciais para maior saúde e vitalidade; - Intestinos equilibrados: fezes firmes e fáceis de limpar; "
        android:id="@+id/textView18"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:textColor="#090101" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botaoAdicionarRacaoCarro"
        android:id="@+id/botaoAdicionarRacaoCahorro1"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView16"
        android:layout_toStartOf="@+id/textView16" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView6"
        android:background="@drawable/shopping2"
        android:layout_below="@+id/botaoAdicionarRacaoCahorro1"
        android:layout_toLeftOf="@+id/textView18"
        android:layout_toStartOf="@+id/textView18"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ração Affinity PetCare GranPlus Choice Frango e Carne para Cães Adultos"
        android:id="@+id/textView19"
        android:layout_below="@+id/botaoAdicionarRacaoCahorro1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#0c0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manutenção da massa muscular, com fontes nobres de proteína; - Este produto possui Satisfação Garantida. Saiba mais abaixo na descrição; - Nutrição equilibrada, nível ideal de nutrientes para auxiliar na manutenção da saúde e na formação de fezes firmes; - Ossos e dentes saudáveis, com vitaminas e minerais que auxiliam na manutenção de ossos e dentes saudáveis."
        android:id="@+id/textView20"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:textColor="#080000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botaoAdicionarRacaoCAchorro02"
        android:id="@+id/botaoAdicionarRacaoCarrinho02"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView16"
        android:layout_toStartOf="@+id/textView16" />
</RelativeLayout>
